{% if page.language_switch %}
<link rel="alternate" hreflang="{{ page.lang | default: 'th' }}" href="{{ site.url }}{{ page.url }}" />
{% if page.alternate_lang_url %}
<link rel="alternate" hreflang="{{ page.lang == 'en' ? 'th' : 'en' }}" href="{{ site.url }}{{ page.alternate_lang_url }}" />
{% endif %}
{% endif %}
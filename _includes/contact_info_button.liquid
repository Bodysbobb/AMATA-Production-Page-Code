<style>
.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  border: 0;
}
</style>

<!-- Add this JavaScript to your file -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle banner dots accessibility
  const dots = document.querySelectorAll('.banner-dot');
  
  dots.forEach((dot, index) => {
    dot.addEventListener('click', function() {
      // Update active state
      dots.forEach(d => {
        d.classList.remove('active');
        d.setAttribute('aria-label', `Go to slide ${d.getAttribute('data-index')*1 + 1}`);
        if (d.querySelector('.visually-hidden')) {
          d.querySelector('.visually-hidden').textContent = `Go to slide ${d.getAttribute('data-index')*1 + 1}`;
        }
      });
      
      dot.classList.add('active');
      dot.setAttribute('aria-label', `Go to slide ${index + 1} (current slide)`);
      if (dot.querySelector('.visually-hidden')) {
        dot.querySelector('.visually-hidden').textContent = `Go to slide ${index + 1} (current slide)`;
      }
    });
  });
  
  // Handle contact button accessibility
  const contactToggle = document.querySelector('.contact-toggle');
  const contactOptions = document.getElementById('contact-options');
  
  if (contactToggle && contactOptions) {
    contactToggle.addEventListener('click', function() {
      const expanded = contactToggle.getAttribute('aria-expanded') === 'true';
      contactToggle.setAttribute('aria-expanded', !expanded);
      contactOptions.setAttribute('aria-hidden', expanded);
    });
  }
});
</script>
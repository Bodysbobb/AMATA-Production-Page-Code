<div class="floating-contact-container {{ theme }}" 
     data-position="{{ position }}"
     data-main-animation="{{ main_animation }}"
     data-wave-animation="{{ wave_animation }}"
     role="region"
     aria-label="{{ contact_title }}">
  <div class="contact-options" id="contact-options" aria-hidden="true">
    {% for item in contact_order %}
      {% case item %}
        
        {% when "email" %}
          {% if email %}
          <a href="mailto:{{ email }}" class="contact-button email-button" aria-label="{{ email_label }}: {{ email }}">
            {% if position == "right" %}
            <div class="contact-button-label">{{ email_label }}</div>
            <div class="contact-button-icon">
              <i class="fa-solid fa-envelope" aria-hidden="true"></i>
            </div>
            {% else %}
            <div class="contact-button-icon">
              <i class="fa-solid fa-envelope" aria-hidden="true"></i>
            </div>
            <div class="contact-button-label">{{ email_label }}</div>
            {% endif %}
          </a>
          {% endif %}
        
        {% when "location" %}
          {% if location_url %}
          <a href="{{ location_url }}" class="contact-button location-button" target="_blank" rel="external nofollow noopener" aria-label="{{ location_label }}">
            {% if position == "right" %}
            <div class="contact-button-label">{{ location_label }}</div>
            <div class="contact-button-icon">
              <i class="fa-solid fa-location-dot" aria-hidden="true"></i>
            </div>
            {% else %}
            <div class="contact-button-icon">
              <i class="fa-solid fa-location-dot" aria-hidden="true"></i>
            </div>
            <div class="contact-button-label">{{ location_label }}</div>
            {% endif %}
          </a>
          {% endif %}
        
        {% when "messenger" %}
          {% if messenger %}
          <a href="https://m.me/{{ messenger }}" class="contact-button messenger-button" target="_blank" rel="external nofollow noopener" aria-label="{{ messenger_label }}">
            {% if position == "right" %}
            <div class="contact-button-label">{{ messenger_label }}</div>
            <div class="contact-button-icon">
              <i class="fa-brands fa-facebook-messenger" aria-hidden="true"></i>
            </div>
            {% else %}
            <div class="contact-button-icon">
              <i class="fa-brands fa-facebook-messenger" aria-hidden="true"></i>
            </div>
            <div class="contact-button-label">{{ messenger_label }}</div>
            {% endif %}
          </a>
          {% endif %}
        
        {% when "line" %}
          {% if line_url %}
          <a href="{{ line_url }}" class="contact-button line-account-button" target="_blank" rel="external nofollow noopener" aria-label="{{ line_label }}">
            {% if position == "right" %}
            <div class="contact-button-label">{{ line_label }}</div>
            <div class="contact-button-icon">
              <i class="fa-brands fa-line" aria-hidden="true"></i>
            </div>
            {% else %}
            <div class="contact-button-icon">
              <i class="fa-brands fa-line" aria-hidden="true"></i>
            </div>
            <div class="contact-button-label">{{ line_label }}</div>
            {% endif %}
          </a>
          {% endif %}
        
        {% when "call" %}
          {% if call %}
          <a href="tel:{{ call | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="contact-button call-button" aria-label="{{ call_label }}: {{ call }}">
            {% if position == "right" %}
            <div class="contact-button-label">{{ call_label }}</div>
            <div class="contact-button-icon">
              <i class="fa-solid fa-phone" aria-hidden="true"></i>
            </div>
            {% else %}
            <div class="contact-button-icon">
              <i class="fa-solid fa-phone" aria-hidden="true"></i>
            </div>
            <div class="contact-button-label">{{ call_label }}</div>
            {% endif %}
          </a>
          {% endif %}
        
        {% when "digitalcard" %}
          {% if digitalcard_url %}
          <a href="{{ digitalcard_url }}" class="contact-button digitalcard-button" target="_blank" rel="external nofollow noopener" aria-label="{{ smart_card_label }}">

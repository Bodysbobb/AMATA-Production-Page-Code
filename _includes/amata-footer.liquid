<style>
.amata-footer {
  width: 100%;
  max-width: 100vw;
  background-color: var(--global-nav-color);
  color: var(--global-text-nav-color);
  padding: 2.5rem 2rem;
  border-radius: 1.5rem;
  margin: 2rem auto;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);

  .footer-aos-wrapper {
    max-width: 1300px;
    margin: 0 auto;
    width: 100%;
  }

  .footer-grid-3col {
    display: grid;
    grid-template-columns: 32% 1px 32% 1px 32%;
    gap: 2rem;
    align-items: flex-start;
  }

  .footer-box {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-title {
    font-size: clamp(1.05rem, 1.5vw, 1.3rem);
    font-weight: 700;
    margin: 0;
    color: var(--global-text-nav-color);
  }

  .footer-item {
    display: flex;
    align-items: flex-start;
    font-size: clamp(0.9rem, 1.3vw, 1.05rem);
    line-height: 1.6;
    color: var(--global-text-nav-color);
  }

  .footer-item i {
    width: 24px;
    text-align: center;
    margin-right: 0.6rem;
    color: var(--global-text-nav-color);
    flex-shrink: 0;
  }

  .footer-item a {
    color: var(--global-text-nav-color);
    text-decoration: none;
    font-weight: 500;
    word-break: break-word;
    transition: color 0.2s ease;
  }

  .footer-item a:hover {
    color: var(--global-hover-nav-color);
  }

  .footer-divider {
    background-color: var(--global-text-color);
    width: 1px;
    height: 100%;
  }

  @media (max-width: 900px) {
    .footer-grid-3col {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .footer-divider {
      height: 1px;
      width: 100%;
      background-color: var(--global-text-color);
    }

    .footer-box {
      align-items: flex-start !important;
      text-align: left !important;
      width: 100%;
    }

    .footer-item {
      justify-content: flex-start !important;
      text-align: left !important;
      width: 100%;
    }

    .footer-item i {
      margin-right: 0.6rem;
    }
  }
}
</style>

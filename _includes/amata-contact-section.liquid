      <!-- Column 2: Contact -->
      <div class="contact-info-box contact-box">
        <div class="contact-info-item">{% include icons/phone-solid.liquid %}<a href="tel:0818888866">081-888-8866</a></div>
        <div class="contact-info-item">{% include icons/line-brands.liquid %}<a href="https://line.me/ti/p/@amatapr" target="_blank">@amatapr</a></div>
        <div class="contact-info-item">{% include icons/email-solid.liquid %}<a href="mailto:sales@amataproduction.com">sales@amataproduction.com</a></div>
        <div class="contact-info-item">{% include icons/world.liquid %}<a href="https://www.amataproduction.com" target="_blank">www.amataproduction.com</a></div>
      </div>

      <!-- Divider -->
      <div class="contact-info-divider"></div>

      <!-- Column 3: Social Media -->
      <div class="contact-info-box social-box">
        <div class="contact-info-item">{% include icons/facebook-brands.liquid %}<a href="https://www.facebook.com/amataproduction" target="_blank">AMATA Production</a></div>
        <div class="contact-info-item">{% include icons/facebook-brands.liquid %}<a href="https://www.facebook.com/amataproduction.polo" target="_blank">AMATA Polo</a></div>
        <div class="contact-info-item">{% include icons/facebook-brands.liquid %}<a href="https://www.facebook.com/amataproduction.sport" target="_blank">AMATA Sport</a></div>
        <div class="contact-info-item">{% include icons/instagram-brands.liquid %}<a href="https://www.instagram.com/amata.production/" target="_blank">amata.production</a></div>
      </div>

    </div>
  </div>
</section>

<style>
.amata-contact-info {
  width: 100%;
  max-width: 100vw;
  background-color: var(--global-nav-color);
  color: var(--global-text-nav-color);
  padding: 2.5rem 2rem;
  border-radius: 1.5rem;
  margin: 2rem auto;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
}

.amata-contact-info .contact-info-aos-wrapper {
  max-width: 1300px;
  margin: 0 auto;
  width: 100%;
}

.amata-contact-info .contact-info-grid-3col {
  display: grid;
  grid-template-columns: 32% 1px 32% 1px 32%;
  gap: 2rem;
  align-items: flex-start;
}

.amata-contact-info .contact-info-box {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.amata-contact-info .contact-info-title {
  font-size: clamp(1.05rem, 1.5vw, 1.3rem);
  font-weight: 700;
  margin: 0;
  color: var(--global-text-nav-color);
}

.amata-contact-info .contact-info-item {
  display: flex;
  align-items: flex-start;
  font-size: clamp(0.9rem, 1.3vw, 1.05rem);
  line-height: 1.6;
  color: var(--global-text-nav-color);
}

.amata-contact-info .contact-info-item svg {
  width: 24px;
  height: 24px;
  margin-right: 0.6rem;
  flex-shrink: 0;
  display: inline-block;
  fill: var(--global-text-nav-color);
  vertical-align: middle;
}

.amata-contact-info .contact-info-item a {
  color: var(--global-text-nav-color);
  text-decoration: none;
  font-weight: 500;
  word-break: break-word;
  transition: color 0.2s ease;
}

.amata-contact-info .contact-info-item a:hover {
  color: var(--global-hover-nav-color);
}

.amata-contact-info .contact-info-divider {
  background-color: var(--global-text-color);
  width: 1px;
  height: 100%;
}

/* Responsive styles */
@media (max-width: 768px) {
  .amata-contact-info .contact-info-grid-3col {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .amata-contact-info .company-box {
    gap: 1.2rem;
  }

  .amata-contact-info .company-box .contact-info-title {
    margin: 0 0 0.5rem 0;
  }

  .amata-contact-info .company-box .contact-info-item {
    margin: 0;
    padding: 0;
    line-height: 1.4;
  }

  .amata-contact-info .contact-info-divider {
    height: 1px;
    width: 100%;
    background-color: var(--global-text-color);
  }

  .amata-contact-info .contact-info-box {
    align-items: flex-start !important;
    text-align: left !important;
    width: 100%;
  }

  .amata-contact-info .contact-info-item {
    justify-content: flex-start !important;
    text-align: left !important;
    width: 100%;
  }

  .amata-contact-info .contact-info-item svg {
    margin-right: 0.6rem;
  }
}
</style>

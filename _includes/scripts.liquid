<!-- Core Scripts -->
<script src="{{ '/assets/js/navbar-controller.js' | relative_url | bust_file_cache }}"></script>

<!-- Contact Button - Only load if contact_info is true -->
{% if page.contact_info %}
  <script src="{{ '/assets/js/contact-button.js' | relative_url | bust_file_cache }}" defer></script>
{% endif %}

<!-- Progress bar -->
{% if site.enable_progressbar %}
  <script defer src="{{ '/assets/js/progress-bar.js' | relative_url | bust_file_cache }}" type="text/javascript"></script>
{% endif %}

<!-- Back to top - don't load if contact button exists -->
{% if site.back_to_top and page.contact_info != true %}
  <script src="{{ '/assets/js/vanilla-back-to-top.min.js' | relative_url | bust_file_cache }}"></script>
  <script>
    addBackToTop();
  </script>
{% endif %}

<!-- Google Analytics -->
{% if site.enable_google_analytics %}
  <script async src="https://www.googletagmanager.com/gtag/js?id={{ site.google_analytics }}"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());
    gtag('config', '{{ site.google_analytics }}');
  </script>
  <script defer src="{{ '/assets/js/google-analytics-setup.js' | relative_url | bust_file_cache }}"></script>
{% endif %}

<!-- Quote specific -->
{% if page.quote %}
<script src="{{ '/assets/js/quote.js' | relative_url }}"></script>
{% endif %}

<!-- Search if enabled -->
{% if site.search_enabled %}
  <script type="module" src="{{ '/assets/js/search/ninja-keys.min.js' | relative_url | bust_file_cache }}"></script>
  <ninja-keys hideBreadcrumbs noAutoLoadMdIcons placeholder="Type to start searching"></ninja-keys>
  <script src="{{ '/assets/js/search-setup.js' | relative_url | bust_file_cache }}"></script>
  <script src="{{ '/assets/js/shortcut-key.js' | relative_url | bust_file_cache }}"></script>
{% endif %}

<!-- Tooltips -->
{% if site.enable_tooltips %}
  <script src="{{ '/assets/js/tooltips-setup.js' | relative_url | bust_file_cache }}"></script>
{% endif %}

<!-- Search highlighting -->
{% if site.search_enabled %}
  <script src="{{ '/assets/js/highlight-search-term.js' | relative_url | bust_file_cache }}"></script>
{% endif %}
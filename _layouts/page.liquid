---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  {% unless page.hide_title and page.hide_description %}
    <header class="post-header">
      {% unless page.hide_title %}
        <h1 class="post-title">{{ page.title }}</h1>
      {% endunless %}
      {% unless page.hide_description %}
        <p class="post-description">{{ page.description }}</p>
      {% endunless %}
    </header>
  {% endunless %}

  <article>
    {{ content }}
  </article>
</div>
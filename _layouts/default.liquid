{% unless page.url == "/sitemap.xml" %}
<!doctype html>
<html lang="{{ site.lang }}">
  <!-- Head -->
  <head>
    {% if page.redirect %}
      {% if page.redirect == true %}
        {% assign redirect = site.baseurl | append: '/' %}
      {% elsif page.redirect contains '://' %}
        {% assign redirect = page.redirect %}
      {% else %}
        {% assign redirect = page.redirect | relative_url %}
      {% endif %}
      <meta http-equiv="refresh" content="3; url={{ redirect }}">
    {% endif %}
    {% include head.liquid %}
    
    {% if page.need_aos %}
      <link href="https://unpkg.com/aos@next/dist/aos.css" rel="stylesheet" />
      <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    {% endif %}
  </head>
  
  <!-- Body -->
  <body class="{% if site.navbar_fixed %}fixed-top-nav{% endif %} {% if page.navbar_auto_hide %}navbar-auto-hide{% endif %} {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    <!-- Background -->
    {% include background_logo.liquid %}
      
    <!-- Regular pages get normal header -->
    {% unless page.landing_hero %}
      {% include header.liquid %}
    {% else %}
    <!-- Landing hero pages get the specially controlled header container -->
    <div id="header-container">
      {% include header.liquid %}
    </div>
    {% endunless %}

    {% if page.contact_info %}
      {% include contact_info_button.liquid %}
    {% endif %}

    <!-- Content -->
    <div class="container mt-5 landing-page-content" role="main">
      {% if page.toc and page.toc.sidebar %}
        {% if page.toc.sidebar == 'right' %}
          <div class="row">
            <div class="col-sm-9">{{ content }}</div>
            <div class="col-sm-3"><nav id="toc-sidebar" class="sticky-top"></nav></div>
          </div>
        {% else %}
          <div class="row">
            <div class="col-sm-3"><nav id="toc-sidebar" class="sticky-top"></nav></div>
            <div class="col-sm-9">{{ content }}</div>
          </div>
        {% endif %}
      {% else %}
        {{ content }}
      {% endif %}
    </div>

    <!-- Footer -->
    {% include footer.liquid %}

    <!-- JavaScripts -->
    {% include scripts.liquid %}
    <script src="{{ '/assets/js/toc-fix.js' | relative_url }}"></script>

    {% if page.quote %}
    <script src="{{ '/assets/js/quote.js' | relative_url }}"></script>
    {% endif %}
  </body>
</html>
{% endunless %}